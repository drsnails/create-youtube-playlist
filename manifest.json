{
    "name": "Create Youtube Playlist",
    "description": "Create Youtube Playlist",
    "version": "1.0.3",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/16.png",
            "32": "img/32.png",
            "48": "img/48.png",
            "128": "img/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*/videos"
            ],
            "js": [
                "./main.js"
            ]
        },
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "./content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}